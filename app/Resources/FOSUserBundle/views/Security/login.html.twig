{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}Connexion{% endblock title %}

{% block body %}
<body class="login-content">
<!-- Login -->
<form action="{{ path("fos_user_security_check") }}" method="post">

<div class="lc-block toggled" id="l-login">
    <div class="lcb-float"><img src="{{ asset('bundles/occore/img/logo.png') }}" width="10px" alt="logo NAO"></div>

    <div class="form-group">
        <input type="email" class="form-control" id="username" name="_username" value="" required="required" placeholder="Votre email">
    </div>

    <div class="form-group">
        <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="Mot de passe" >
    </div>

    <div class="clearfix"></div>

    <div class="p-relative ">
        <div class="checkbox cr-alt">
            <label for="remember_me" class="c-gray">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <i class="input-helper"></i>
                Se souvenir de moi
            </label>
        </div>

    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" >
    <input type="submit" id="_submit" name="_submit" value="Connexion" class="btn btn-block btn-success btn-float m-t-25" />
    <br>

    <div class="c-red">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    </div>
    <div>
        <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oublié ?</a>
    </div>
    <br>
    <a href="{{ path('oc_core_accueil') }}" title="Accueil du site">Retour à l'accueil du site</a>

</div>

</form>
<!-- Register -->
<div class="lc-block" id="l-register">
    <div class="lcb-float"><i class="zmdi zmdi-pin-account"></i></div>

    <div class="form-group">
        <input type="text" class="form-control" placeholder="Username">
    </div>

    <div class="form-group">
        <input type="text" class="form-control" placeholder="Email Address">
    </div>

    <div class="form-group">

        <input type="password" class="form-control" placeholder="Password">
    </div>

    <div class="clearfix"></div>

    <div class="checkbox cr-alt">
        <label>
            <input type="checkbox" value="">
            <i class="input-helper"></i>
            Accept the license agreement
        </label>
    </div>

    <a href="" class="btn btn-block btn-success m-t-25">Register</a>

    <ul class="login-navigation">
        <li data-block="#l-login" class="bg-blue">Login</li>
        <li data-block="#l-forget-password" class="bg-orange">Forgot Password?</li>
    </ul>
</div>

<!-- Forgot Password -->
<div class="lc-block" id="l-forget-password">
    <div class="lcb-float"><i class="zmdi zmdi-pin-account"></i></div>

    <small class="m-b-15 d-block">Nulla eu risus senns with lorem urabitur commodo lorem fringilla enim feugiat commodo sed ac lacus.</small>

    <div class="form-group">
        <input type="text" class="form-control" placeholder="Email Address">
    </div>

    <a href="" class="btn btn-block btn-warning">Reset Password</a>

    <ul class="login-navigation">
        <li data-block="#l-login" class="bg-blue">Login</li>
        <li data-block="#l-register" class="bg-green">Register</li>
    </ul>
</div>


{% endblock body %}
