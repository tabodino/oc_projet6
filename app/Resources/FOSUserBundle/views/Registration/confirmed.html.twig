{% extends "OCCoreBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}Finalisation inscription{% endblock title %}

{% block body %}
    <div id='main' role='main'>
        <div id='main-content-header'>
            <div class='container'>
                <div class='row'>
                    <div class='col-sm-12'>
                        <h1 class='title'>Inscription finalisée</h1>
                    </div>
                </div>
            </div>
        </div>

        <div id='main-content'>
            <div class='container'>
                <div class='row'>
                    <div class='col-sm-12'>
                        <p class='lead text-center no-mg-b'>Votre compte est désormais créé et activé.</p>
                    </div>
                </div>

                <div class='row'>
                    <div class='col-md-10 col-md-offset-1 col-sm-8 col-sm-offset-2'>
                        <div class='page-header page-header-with-icon'>
                            <i class='fa fa-envelope'></i>
                            <h2>Merci pour votre inscription.</h2>
                            <br>
                            <p>Vous venez de vous inscrire sur notre site et nous vous en remercions.</p>
                            <p>Vous pouvez dès à présent vous rendre sur votre espace dédié en cliquant sur le lien ci-dessous.</p>
                            <p>A très vite, l'équipe de NAO.</p>
                            <br><br>
                            <a href="{{ path('fos_user_security_login') }}" class="btn btn-block btn-success" >Connexion</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
    {% if targetUrl %}
    <p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>
    {% endif %}
{% endblock body %}
