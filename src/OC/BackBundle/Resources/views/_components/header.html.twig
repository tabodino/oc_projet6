<header id="header" class="clearfix" data-spy="affix" data-offset-top="65">
    <ul class="header-inner">

        <!-- Logo -->
        <li class="logo">
            <a href="{{ path('oc_back_homepage') }}"><img src="{{ asset('bundles/occore/img/logo.png') }}"  width="30%" alt="logo"></a>
            <div id="menu-trigger"><i class="zmdi zmdi-menu"></i></div>
        </li>

        <li class="hidden-xs hidden-sm"><h2> Partie administration NAO</h2></li>

        <!-- Quick Apps -->
        <li class="hidden-xs dropdown pull-right">
            <a href="" data-toggle="dropdown">
                <i class="zmdi zmdi-apps"></i>
            </a>

            <div class="dropdown-menu pull-right" id="launch-apps">
                <div class="dropdown-header bg-teal">ACCES RAPIDE</div>

                <div class="la-body">
                    <div class="lab-item">
                        <a href="{{ path('oc_back_homepage') }}" class="bg-cyan">
                            <i class="zmdi zmdi-home"></i>
                        </a>
                        <small>Accueil</small>
                    </div>

                    <div class="lab-item">
                        <a href="{{ path('oc_back_observations') }}" class="bg-amber">
