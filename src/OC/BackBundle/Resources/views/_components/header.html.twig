                        <small>Observations</small>
                    </div>

                    {% if  app.user.roles|first == 'ROLE_NATURALISTE' %}

                        <div class="lab-item">
                            <a href="{{ path('oc_back_users') }}" class="bg-green">
                                <i class="zmdi zmdi-account"></i>
                            </a>
                            <small>Utilisateurs</small>
                        </div>

                        <div class="lab-item">
                            <a href="{{ path('oc_back_observation_unvalidated') }}" class="bg-blue">
                                <i class="zmdi zmdi-check"></i>
                            </a>
                            <small>Validations</small>
                        </div>


                    {% else %}

                        <div class="lab-item">
                            <a href="{{ path('oc_back_profile') }}" class="bg-green">
                                <i class="zmdi zmdi-account"></i>
                            </a>
                            <small>Compte</small>
                        </div>

                    {% endif %}


                    <div class="lab-item">
                        <a href="{{ path('oc_back_help') }}" class="bg-bluegray">
                            <i class="zmdi zmdi-help-outline"></i>
                        </a>
                        <small>Aide</small>
                    </div>

                    <div class="lab-item">
                        <a href="{{ path('fos_user_security_logout') }}" class="bg-red">
                            <i class="zmdi zmdi-power-off"></i>
                        </a>
                        <small>DÃ©connexion</small>
                    </div>
                </div>
            </div>
        </li>
        <!-- Time -->
        <li class="pull-right hidden-xs">
            <div id="time">
                <span id="t-hours"></span>
                <span id="t-min"></span>
                <span id="t-sec"></span>
            </div>
        </li>
    </ul>
