{% extends "OCCoreBundle::layout.html.twig" %}

{% block title %}Observations{% endblock title %}
{% block body_tag %}<body class='homepage'>{% endblock body_tag %}
{% block body %}

    <div id='main' role='main'>
        <div id='main-content-header'>
            <div class='container'>
                <div class='row'>
                    <div class='col-sm-12'>
                        <h1 class='title'>Détail de l'espèce</h1>
                    </div>
                </div>
            </div>
        </div>

        <div id='main-content'>
            <div class='container'>

                <div class='row'>
                    <div class='col-sm-12'>
                        <div id='main-content'>
                            <div class='container'>
                                <div class='row'>
                                    <div class='col-md-push-9 col-sm-push-8 col-sm-4 col-md-3'>


                                        <nav class='sidebar'>
                                            <div class="button-wrapper sidebar-toggle">
                                                <button class='btn btn-block btn-contrast' data-target='.sidebar-collapse' data-toggle='collapse' type='button'>
                                                    <span class='sr-only'>Toggle navigation</span>
                                                    <span class='icon-bar'></span>
                                                    <span class='icon-bar'></span>
                                                    <span class='icon-bar'></span>
                                                </button>
                                            </div>
                                            <div class='sidebar-collapse collapse'>

                                                <div class='box'>
                                                    <h3 class='title'>Rechercher</h3>
                                                    <form action="{{ path('oc_core_result_species') }}" method='get'>
                                                        <div class='input-group'>
                                                            <input class='form-control' name="keyword" placeholder='Rechercher...' type='text'>
                                                                  <span class='input-group-btn'>
                                                                    <button class='btn btn-contrast' type='submit'>
                                                                        <i class='fa fa-search'></i>
                                                                    </button>
                                                                  </span>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </nav>
                                    </div>

                                    <div class='col-md-pull-3 col-sm-pull-4 col-sm-8 col-md-9'>
                                        <div class='text-boxes portfolio-boxes blog-posts'>
                                                <div class='row text-box text-box-title-above'>
                                                    <div class='col-sm-12'>
                                                        <h2 class='title'>{{ species.nomVern|capitalize }}</a></h2>
                                                        <h3><strong>Famille</strong> {{ species.famille }}</h3>
                                                        <h3><strong>Ordre</strong> {{ species.ordre }}</h3>
                                                        <h3><strong>Lb Auteur</strong> {{ species.lbAuteur }}</h3>
                                                        <h3><strong>Lb Nom</strong> {{ species.lbNom }}</h3>
                                                        <h3><strong>Nom complet</strong> {{ species.nomComplet }}</h3>
                                                        <h3><strong>Nom Vern Eng</strong> {{ species.nomVernEng }}</h3>
                                                    </div>
                                                </div>
                                        </div>

                                        <div class='page-header page-header-with-icon'>
                                            <i class='fa fa-map'></i>
                                            <h2> Localisation</h2>
                                        </div>

                                        {% set countries = { 'fr': species.fr, 'gf': species.gf, 'mar': species.mar,
                                        'gua': species.gua, 'sm': species.sm, 'sb': species.sb, 'spm': species.spm,
                                        'may': species.may, 'reu': species.reu, 'taaf': species.taaf, 'nc': species.nc,
                                        'wf':species.wf, 'pf': species.pf, 'cli': species.cli} %}

                                        {% set lands = "" %}

                                        {% for key, country in countries %}
                                            {% if country != "" %}
                                                {% set lands = lands~key~"+" %}
                                            {% endif %}
                                        {% endfor %}

                                        <iframe width="100%" height="400" src="{{ path('map', {'lands': lands|url_encode})}}" frameborder="0"> </iframe>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class='fade' id='scroll-to-top'>
                        <i class='fa fa-icon-chevron-up'></i>
                    </div>

                </div>

            </div>
        </div>
    </div>


{% endblock body %}

