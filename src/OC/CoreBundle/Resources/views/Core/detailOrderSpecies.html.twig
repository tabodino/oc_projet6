{% extends "OCCoreBundle::layout.html.twig" %}

{% block title %}Détails Espèces{% endblock title %}

{% block body %}

<div id='main' role='main'>
    <div id='main-content-header'>
        <div class='container'>
            <div class='row'>
                <div class='col-sm-12'>
                    <h1 class='title'>Les {{ app.request.get('order') }}</h1>
                </div>
            </div>
        </div>
    </div>
    <div id='main-content'>
        <div class='container'>
            <div class='row'>
                <div class='col-sm-12'>

                    <form class="mg-b" method="get" action="{{ path('oc_core_result_species') }}">
                        <div class="input-group">
                            <input class="form-control" type="text" name="keyword" placeholder="Rechercher...">
                                <span class="input-group-btn">
                                    <button class="btn btn-contrast" type="submit">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                        </div>
                    </form>
                </div>
            </div>
            <div class='row'>
                <div class='col-sm-12'>
                    <div class='page-header page-header-with-icon'>
                        <i class='fa fa-table'></i>
                        <h2>{{ order }}</h2>
                    </div>
                    <div class='row'>
                        <div class='col-sm-12'>
                            <div class='table-responsive'>
                                <table class='table table-bordered table-hover'>
                                    <thead>
                                    <tr>
                                        <th>
                                            <i class='fa fa-sitemap text-contrast'></i>
                                            Famille
                                        </th>
                                        <th>
                                            <i class='fa fa-tags text-contrast'></i>
                                            Nom complet
                                        </th>
                                        <th>
                                            <i class='fa fa-tag text-contrast'></i>
                                            Nom vern
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                        {% for o in orders %}

                                                <tr>

                                                    <td><a href="{{ path('oc_core_detail_species', { 'id': o.id}) }}">{{ o.famille }}</a></td>
                                                    <td><a href="{{ path('oc_core_detail_species', { 'id': o.id}) }}">{{ o.nomComplet }}</a></td>
                                                    <td><a href="{{ path('oc_core_detail_species', { 'id': o.id}) }}">{{ o.nomVern }}</a></td>

                                                </tr>

                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
    <div class='fade' id='scroll-to-top'>
        <i class='fa fa-chevron-up'></i>
    </div>
</div>

{% endblock body %}